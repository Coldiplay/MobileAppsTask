<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewGarbageAndPeople.View.EditFile"
             Title="EditFile">
    <VerticalStackLayout>
        <Label Text="Название файла" />
        <Entry Text="{Binding File.Title}"/>
        <Label Text="Расширение файла"/>
        <Entry Text="{Binding File.Extension}"/>
        <Label Text=""/>
        <Button Text="Обзор..." Command="{Binding}"/>
    </VerticalStackLayout>
</ContentPage>