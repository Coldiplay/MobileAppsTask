<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NewGarbageAndPeople.VM"
             x:Class="NewGarbageAndPeople.View.EditThing"
             Title="EditThing"
             BindingContext="{DynamicResource vm}">
    <ContentPage.Resources>
        <vm:EditThingVM x:Key="vm"/>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label Text="Название вещи:"/>
        <Entry Text="{Binding Title}"/>
        <Label Text="Владелец"/>
        <Picker ItemsSource="{Binding Owners}" ItemDisplayBinding="{Binding FL}" SelectedItem="{Binding Thing.Owner}" Title="Выбри владельца" />
        <Editor Placeholder="Введите описание штуки..." Text="{Binding Thing.Description}"/>
        <Label Text="Пригодное для переноски"/>
        <Switch HorizontalOptions="Start" IsToggled="{Binding Thing.Carryable}"/>
        <Label Text="Количество"/>
        <Slider  Maximum="100" Minimum="1" Value="{Binding Count}"/>
        <Label HorizontalOptions="Center" Text="{Binding Count}"/>
        <Button Text="Создать" Command="{Binding Redacting}"/>

    </VerticalStackLayout>
</ContentPage>