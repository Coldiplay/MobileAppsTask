<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewGarbageAndPeople.View.AuthorizePage"
             xmlns:vm="clr-namespace:NewGarbageAndPeople.VM"
             Title="AuthorizePage"
             BindingContext="{DynamicResource vm}">
    <ContentPage.Resources>
        <vm:AuthorizePageVM x:Key="vm"/>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label 
            Text="Авторизация"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="Логин"/>
        <Entry Text="{Binding Login}"/>
        <Label Text="Пароль"/>
        <Entry IsPassword="True" Text="{Binding Password}"/>
        <Button Text="Авторизоваться"/>

        <Button Text="Регистрация"></Button>
    </VerticalStackLayout>
</ContentPage>