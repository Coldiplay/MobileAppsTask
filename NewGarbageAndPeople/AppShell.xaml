<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NewGarbageAndPeople.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NewGarbageAndPeople"
    xmlns:view="clr-namespace:NewGarbageAndPeople.View"
    Title="NewGarbageAndPeople"
    BackgroundColor="Azure">

    <!--<Shell.Resources>
        <Style TargetType="Shell">
            <Setter Property="BackgroundColor" Value="Yellow"/>
        </Style>
    </Shell.Resources>-->
    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid BackgroundColor="Black"
                  HeightRequest="50">
                <Label Text="Страницы"
                       TextColor="White"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontSize="20"/>
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>
    <Shell.FlyoutFooterTemplate>
        <DataTemplate>
            <StackLayout HeightRequest="100" BackgroundColor="Black">
                
            </StackLayout>
        </DataTemplate>
    </Shell.FlyoutFooterTemplate>


    <TabBar>
        <ShellContent 
Title="Авторизация" 
ContentTemplate="{DataTemplate view:AuthorizePage}" 
Route="authorize"/>
    </TabBar>

    <TabBar>
        <ShellContent 
        Title="Регистрация" 
        ContentTemplate="{DataTemplate view:RegistrationPage}" 
        Route="registration"/>
    </TabBar>

    <FlyoutItem Title="Главная">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="mainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Файлы">
        <ShellContent
            Title="Файлы"
            ContentTemplate="{DataTemplate view:FileViewerPage}"
            Route="fileViewerPage" />
    </FlyoutItem>

    
</Shell>
